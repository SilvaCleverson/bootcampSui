#[test_only]
module introducao::desafio_logo {
    use std::debug::print;
    use std::string::utf8;

    /// ------------------------------------------------------------------------------------
    /// Desafio: Logo ASCII - Bootcamp Sui Move
    /// Autor: Cleverson Silva
    /// ------------------------------------------------------------------------------------

    const ENotReady: u64 = 0;

    /// Imprime uma linha ASCII.
    fun print_line(line: vector<u8>) {
        print(&utf8(line));
    }

    /// Repete uma linha `n` vezes.
    fun repeat_line(line: vector<u8>, n: u64) {
        let i = 0;
        while (i < n) {
            print_line(line);
            i = i + 1;
        }
    }

